<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cheque_transfered_wizard_wizard_view" model="ir.ui.view">
            <field name="name">Cheque Transfered</field>
            <field name="model">cheque.transfered.wizard</field>
            <field name="arch" type="xml">
                <form string="Cheque Transfer">
                    <group>
                        <field name="transfered_date"/>
                        <field name="contact_id"/>
                    </group>
                    <footer>
                        <button class="oe_highlight" name="create_ckeck_transfer_entry" string="Submit" type="object"/>
                        or
                        <button class="oe_highlight" special="cancel" string="Cancel"/>
                    </footer>
                </form></field>
        </record>
        <record id="cheque_transfered_wizard_action" model="ir.actions.act_window">
            <field name="name">Cheque Transfered Wizard</field>
            <field name="res_model">cheque.transfered.wizard</field>
            <field name="target">new</field>
            <field name="view_mode">form</field>
        </record>
        <record id="cheque_wizard_wizard_view" model="ir.ui.view">
            <field name="name">Cheque Wizard</field>
            <field name="model">cheque.wizard</field>
            <field name="arch" type="xml">
                <form string="Cheque">
                    <group>
                        <field name="chequed_date"/>
                        <field name="cash_journal_id"/>
                        <field invisible="1" name="is_outgoing" readonly="1"/>
                        <field invisible="is_outgoing == False" name="bank_account_id" required="is_outgoing == True"/>
                    </group>
                    <footer>
                        <button class="oe_highlight" name="create_cheque_entry" string="Submit" type="object"/>
                        or
                        <button class="oe_highlight" special="cancel" string="Cancel"/>
                    </footer>
                </form></field>
        </record>
        <record id="cheque_wizard_action" model="ir.actions.act_window">
            <field name="name">Cheque</field>
            <field name="res_model">cheque.wizard</field>
            <field name="target">new</field>
            <field name="view_mode">form</field>
        </record>
        <record id="account_incoming_cheque_form_view" model="ir.ui.view">
            <field name="name">account.incoming.cheque.form.view</field>
            <field name="model">account.cheque</field>
            <field name="arch" type="xml">
                <form string="Incoming Cheque">
                    <header>
                        <button class="btn-primary" invisible="status1 in ['registered', 'cashed', 'bounced', 'return', 'cancel', 'transfered', 'deposited']" name="set_to_submit" string="Submit" type="object"/>
                        <button class="btn-primary" invisible="status1 in ['draft', 'cashed', 'bounced', 'return', 'cancel', 'transfered', 'deposited']" name="%(cheque_wizard_action)d" string="Cashed" type="action"/>
                        <button class="btn-primary" invisible="status1 in ['draft', 'bounced', 'return', 'cancel', 'transfered', 'deposited', 'cashed'] or is_partial == True" name="set_to_bounced" string="Bounced" type="object"/>
                        <button class="btn-primary" invisible="status1 in ['draft', 'return', 'cancel', 'cashed'] or is_partial == True" name="set_to_return" string="Returned" type="object"/>
                        <button class="btn-primary" invisible="status1 in ['draft', 'bounced', 'return', 'cancel', 'transfered', 'deposited', 'cashed']" name="set_to_deposite" string="Deposite" type="object"/>
                        <button class="btn-primary" invisible="status1 in ['draft', 'bounced', 'return', 'cancel', 'transfered', 'deposited', 'cashed'] or is_partial == True" name="%(cheque_transfered_wizard_action)d" string="Transfered" type="action"/>
                        <button class="btn-primary" invisible="status1 in ['cancel', 'cashed', 'deposited', 'transfered', 'return', 'bounced']" name="set_to_cancel" string="Cancel" type="object"/>
                        <field name="status1" widget="statusbar"/>
                    </header>
                    <sheet string=" Incoming Account Cheque">
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" icon="fa-cloud-upload" invisible="attachment_count == 0" name="attachment_on_account_cheque" type="object">
                                <field name="attachment_count" string="Attachment" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" icon="fa-bars" invisible="journal_items_count == 0" name="action_view_jornal_items" type="object">
                                <field name="journal_items_count" string="Journal Items" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" icon="fa-university" invisible="status1 in ['draft']" name="open_payment_matching_screen" s="btn-primary" string="Payment Matching" type="object"/>
                        </div>
                        <div class="oe_title oe_left">
                            <h1>
                                <field name="sequence"/>
                            </h1>
                        </div>
                        <h1>
                            <field name="name" readonly="status1 not in 'draft'"/>
                        </h1>
                        <group>
                            <group>
                                <field name="bank_account_id" readonly="status1 not in 'draft'"/>
                                <field name="cheque_number" readonly="status1 not in 'draft'"/>
                                <field name="amount" readonly="status1 not in 'draft'"/>
                                <field name="re_amount" readonly="1"/>
                                <field invisible="1" name="account_cheque_type" readonly="1"/>
                            </group>
                            <group>
                                <field name="payee_user_id" readonly="status1 not in 'draft'" string="Payer"/>
                                <field name="cheque_date" readonly="status1 not in 'draft'"/>
                                <field invisible="account_cheque_type == 'outgoing'" name="cheque_receive_date" readonly="status1 not in 'draft'" required="account_cheque_type == 'incoming'"/>
                                <field invisible="status1 in ['draft', 'registered', 'cashed', 'bounced', 'cancel']" name="cheque_return_date" readonly="status1 not in 'draft'"/>
                                <field invisible="1" name="in_count"/>
                                <field invisible="1" name="is_partial"/>
                            </group>
                        </group>
                        <separator/>
                        <group>
                            <group>
                                <field name="credit_account_id" readonly="status1 not in 'draft'"/>
                                <field name="journal_id" readonly="status1 not in 'draft'"/>
                            </group>
                            <group>
                                <field name="debit_account_id" readonly="status1 not in 'draft'"/>
                                <field name="company_id" readonly="status1 not in 'draft'"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="comment" placeholder="Add an internal note..." readonly="status1 not in 'draft'"/>
                            </page>
                            <page string="Invoices">
                                <field context="{'tree_view_ref': 'account.invoice_tree'}" name="invoice_ids"/>
                            </page>
                            <page string="Attachment">
                                <field name="attchment_ids" readonly="status1 not in 'draft'"/>
                            </page>
                        </notebook>
                    </sheet>
                </form></field>
        </record>
        <record id="account_incoming_cheque_tree_view" model="ir.ui.view">
            <field name="name">account.incoming.cheque.tree.view</field>
            <field name="model">account.cheque</field>
            <field name="arch" type="xml">
                <tree string="Incoming Account Cheque">
                    <field name="name"/>
                    <field name="payee_user_id" string="Payer"/>
                    <field name="bank_account_id"/>
                    <field name="cheque_number"/>
                    <field name="amount"/>
                    <field name="journal_id"/>
                    <field name="cheque_date"/>
                    <field name="cheque_return_date"/>
                    <field name="status1"/>
                </tree></field>
        </record>
        <!-- Outgoing View -->
        <record id="account_outgoing_cheque_form_view" model="ir.ui.view">
            <field name="name">account.outgoing.cheque.form.view</field>
            <field name="model">account.cheque</field>
            <field name="arch" type="xml">
                <form string="Outgoing Account Cheque">
                    <header>
                        <button class="btn-primary" invisible="status in ['registered', 'cashed', 'bounced', 'return', 'cancel', 'transfered', 'deposited']" name="set_to_submit" string="Submit" type="object"/>
                        <button class="btn-primary" invisible="status in ['draft', 'cashed', 'bounced', 'return', 'cancel', 'transfered', 'deposited']" name="%(cheque_wizard_action)d" string="Cashed" type="action"/>
                        <button class="btn-primary" invisible="status in ['draft', 'bounced', 'return', 'cancel', 'transfered', 'deposited', 'cashed'] or is_partial == True" name="set_to_bounced" string="Bounced" type="object"/>
                        <button class="btn-primary" invisible="status in ['draft', 'return', 'cancel', 'transfered', 'deposited', 'cashed'] or is_partial == True" name="set_to_return" string="Returned" type="object"/>
                        <button class="btn-primary" invisible="status in ['cancel', 'cashed', 'return', 'bounced']" name="set_to_cancel" string="Cancel" type="object"/>
                        <field name="status" widget="statusbar"/>
                        <button class="btn-primary" invisible="status in ['draft', 'cancel']" name="%(bi_account_cheque.dynamic_cheque_print_wizard_view)d" string="Print Dynamic Cheque" type="action"/>
                    </header>
                    <sheet string="Outgoing Account Cheque">
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" icon="fa-cloud-upload" invisible="attachment_count == 0" name="attachment_on_account_cheque" type="object">
                                <field name="attachment_count" string="Attachment" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" icon="fa-bars" invisible="journal_items_count == 0" name="action_view_jornal_items" type="object">
                                <field name="journal_items_count" string="Journal Items" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" icon="fa-university" invisible="status in ['draft']" name="open_payment_matching_screen" s="btn-primary" string="Payment Matching" type="object"/>
                        </div>
                        <div class="oe_title oe_left">
                            <h1>
                                <field name="sequence"/>
                            </h1>
                        </div>
                        <h1>
                            <field name="name" readonly="status not in 'draft'"/>
                        </h1>
                        <group>
                        </group>
                        <group>
                            <group>
                                <field name="bank_account_id" readonly="status not in 'draft'"/>
                                <field name="cheque_number" readonly="status not in 'draft'"/>
                                <field name="amount" readonly="status not in 'draft'"/>
                                <field name="re_amount" readonly="1"/>
                                <field invisible="1" name="account_cheque_type" readonly="1"/>
                            </group>
                            <group>
                                <field name="payee_user_id" readonly="status not in 'draft'" string="Payee"/>
                                <field name="cheque_date" readonly="status not in 'draft'"/>
                                <field invisible="account_cheque_type == 'incoming'" name="cheque_given_date" readonly="status not in 'draft'" required="account_cheque_type == 'outgoing'"/>
                                <field invisible="account_cheque_type == 'outgoing'" name="cheque_receive_date" readonly="status not in 'draft'" required="account_cheque_type == 'incoming'"/>
                                <field invisible="status in ['draft', 'registered', 'cashed', 'bounced', 'cancel']" name="cheque_return_date" readonly="status not in 'draft'"/>
                                <field invisible="1" name="in_count"/>
                                <field invisible="1" name="is_partial"/>
                            </group>
                        </group>
                        <separator/>
                        <group>
                            <group>
                                <field name="credit_account_id" readonly="status not in 'draft'"/>
                                <field name="journal_id" readonly="status not in 'draft'"/>
                            </group>
                            <group>
                                <field name="debit_account_id" readonly="status not in 'draft'"/>
                                <field name="company_id" readonly="status not in 'draft'"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="comment" placeholder="Add an internal note..." readonly="status not in 'draft'"/>
                            </page>
                            <page string="Invoices">
                                <field name="invoice_ids"/>
                            </page>
                            <page string="Attachment">
                                <field name="attchment_ids" readonly="status not in 'draft'"/>
                            </page>
                        </notebook>
                    </sheet>
                </form></field>
        </record>
        <record id="account_outgoing_cheque_tree_view" model="ir.ui.view">
            <field name="name">account.outgoing.cheque.tree.view</field>
            <field name="model">account.cheque</field>
            <field name="arch" type="xml">
                <tree string="Outgoing Account Cheque">
                    <field name="name"/>
                    <field name="payee_user_id"/>
                    <field name="bank_account_id"/>
                    <field name="cheque_number"/>
                    <field name="amount"/>
                    <field name="journal_id"/>
                    <field name="cheque_date"/>
                    <field name="cheque_return_date"/>
                    <field name="status"/>
                </tree></field>
        </record>
        <!-- End -->
        <record id="action_incoming_cheque" model="ir.actions.act_window">
            <field name="name">Incoming Cheque</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.cheque</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="account_incoming_cheque_tree_view"/>
            <field name="domain">[('account_cheque_type','=','incoming')]</field>
            <field name="context">{'default_account_cheque_type': 'incoming'}</field>
        </record>
        <record id="action_outgoing_cheque" model="ir.actions.act_window">
            <field name="name">Outgoing Cheque</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.cheque</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('account_cheque_type','=','outgoing')]</field>
            <field name="context">{'default_account_cheque_type': 'outgoing'}</field>
        </record>
        <record id="act_outgoing_view_form" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="action_outgoing_cheque"/>
            <field eval="20" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_outgoing_cheque_form_view"/>
        </record>
        <record id="act_outgoing_view_tree" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="action_outgoing_cheque"/>
            <field eval="10" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="account_outgoing_cheque_tree_view"/>
        </record>
        <record id="act_incoming_view_form" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="action_incoming_cheque"/>
            <field eval="20" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_incoming_cheque_form_view"/>
        </record>
        <record id="act_incoming_view_tree" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="action_incoming_cheque"/>
            <field eval="10" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="account_incoming_cheque_tree_view"/>
        </record>
        <record id="report_form_account_cheque" model="ir.ui.view">
            <field name="name">report.form.account.cheque</field>
            <field name="model">report.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="from_date"/>
                        <field name="to_date"/>
                    </group>
                    <group>
                        <field name="cheque_type"/>
                    </group>
                    <footer>
                        <button class="oe_highlight" name="submit" string="Submit" type="object"/>
                        or
                        <button class="oe_highlight" special="cancel" string="Cancel"/>
                    </footer>
                </form></field>
        </record>
        <record id="action_report_wizard" model="ir.actions.act_window">
            <field name="name">Account Cheque Report</field>
            <field name="res_model">report.wizard</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="report_form_account_cheque"/>
            <field name="target">new</field>
        </record>
        <menuitem id="menu_account_cheque" name="Cheque Management" parent="account.menu_finance_entries" sequence="4"/>
        <menuitem action="action_incoming_cheque" id="menu_sub_incoming_cheque" parent="menu_account_cheque" sequence="1"/>
        <menuitem action="action_outgoing_cheque" id="menu_sub_outgoing_cheque" parent="menu_account_cheque" sequence="2"/>
        <menuitem action="action_report_wizard" id="menu_account_cheque_report" parent="account.menu_finance_reports" sequence="100"/>
    </data>
</odoo>
