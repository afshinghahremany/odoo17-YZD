<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- External layouts styles -->
   <template id="external_layout_common_header">
        <t t-foreach="docs" t-as="o">
            <div class="header">
                <t t-if="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id"/>
                </t>
                <t t-if="not o or not 'company_id' in o">
                    <t t-set="company" t-value="res_company"/>
                </t>
                <div class="row">
                    <div class="col-10" align="center" style="font-size:20px;top:30px">
                        <b><span>MINUTES OF MEETING</span></b>
                    </div>
                    <div class="col-2" align="right">
                        <p >Page: <span class="page"/> / <span class="topage"/></p>
                    </div>
                </div><br/>
                <div class="row" style="border-bottom: 1px solid black;">
                    <div class="col-6">

                        <t t-if="o.company_id.name">
                           <b><span t-esc="o.company_id.name"/></b><br/>
                        </t>

                        <t t-if="o.company_id.street">
                           <span t-esc="o.company_id.street"/><br/>
                        </t>

                        <t t-if="o.company_id.street2">
                           <span t-esc="o.company_id.street2"/><br/>
                        </t>

                        <t t-if="o.company_id.city">
                            <span t-esc="o.company_id.city"/> - 
                            <t t-if="o.company_id.zip">
                                <span t-esc="o.company_id.zip"/><br/>
                            </t>
                        </t>

                        <t t-if="o.company_id.state_id.name">
                            <span t-esc="o.company_id.state_id.name"/>, 
                            <t t-if="o.company_id.country_id.name">
                                <span t-esc="o.company_id.country_id.name"/><br/>
                            </t>
                        </t>
                    </div>
                    <div class="col-6">
                        <t t-if="o.company_id.phone">
                            Phone: <span t-esc="o.company_id.phone"/><br/>
                        </t>
                        <t t-if="o.company_id.email">
                            Email: <span t-esc="o.company_id.email"/><br/>
                        </t>
                        <t t-if="o.company_id.website">
                            Website: <span t-esc="o.company_id.website"/><br/>
                        </t>
                    </div>
                </div>
            </div>
            <div class="article o_report_layout_standard">
                <t t-raw="0" />
            </div>
        </t>
    </template>
</odoo>
