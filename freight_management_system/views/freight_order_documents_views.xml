<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Form view of freight_order_document model-->
    <record id='freight_order_documents_view_form' model='ir.ui.view'>
        <field name="name">freight.order.documents.view.form</field>
        <field name="model">freight.order.documents</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="document_type" string="نوع سند" readonly="name != 'New'"/>
                            <field name="doc_attachment_ids"
                                   widget="many2many_binary" class="oe_inline"
                                   string="فایل های سند"/>
                            <field name="freight_order_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="issue_date" string="تاریخ سند"/>
                            <field name="expiry_date" required="False" string="تاریخ انقضا"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="بارنامه" invisible="document_type != 'Bill of Lading'">
                            <field name="bill_of_lading_id"/>
                        </page>
                        <page string="قبض باسکول" invisible="document_type != 'Weight Certificate'">
                            <field name="baskol_id"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>   
    <!--Tree view of freight_order_documents model-->
    
    <record id='freight_order_documents_view_tree' model='ir.ui.view'>
        <field name="name">freight.order.documents.view.tree</field>
        <field name="model">freight.order.documents</field>
        <field name="arch" type="xml">
            <tree string="docs">
                <field name="name"/>
                <field name="document_type"/>
                <field name="issue_date"/>
                <field name="expiry_date"/>
            </tree>
        </field>
    </record>
</odoo>
