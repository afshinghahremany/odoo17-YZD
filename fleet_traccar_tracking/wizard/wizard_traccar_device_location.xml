<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="form_wizard_traccar_device_location" model="ir.ui.view">
			<field name="name">Traccar Device Location</field>
			<field name="model">wizard.traccar.device.location</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Traccar Device Location">
					<group string="Tracking Details">
                        <group col="4">
                            <field name="vehicle_id" readonly="1"/>                      
                        </group>
                        <group col="4">
                            <field name="device_id" readonly="1"/>
                        </group>
                    </group>                    
					<footer>
                        <button name="open_device_location" string="Open Location" type="object" class="btn-primary" data-hotkey="q"/>
                        <button special="cancel" data-hotkey="z" string="Cancel" type="object" class="btn-secondary"/>
					</footer>
				</form>
			</field>
		</record>

        <record id="form_details_traccar_current_position" model="ir.ui.view">
			<field name="name">Traccar Device Current Position</field>
			<field name="model">wizard.traccar.current.position</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Traccar Device Summary" edit="0" js_class="traccar_map_form">
					<div class="row">
						<div class="col-3">
							<label for="latitude"/>
							<h5>
								<field name="latitude" class="oe_inline"/>
							</h5>
						</div>
						<div class="col-3">
							<label for="longitude"/>
							<h5>
								<field name="longitude" class="oe_inline"/>
							</h5>
						</div>
					</div> 
					<div class="row">
						<div class="o_horizontal_separator mt-4 mb-3 text-uppercase fw-bolder small">
							Current Position Map
						</div>
						<div class="o_traccar_map_view_container" style="height:500px !important; overflow: hidden;">
							<div id="o_traccar_map_view" class="o_traccar_map_view" show_current_position='true'>
								<div id="popup" class="ol-popup">
									<a href="#" id="popup-closer" class="ol-popup-closer"></a>
									<div id="popup-content"></div>
								</div>
							</div>                                
						</div>
					</div>                 
					<footer>
                        <button special="cancel" data-hotkey="z" string="Cancel" type="object" class="btn-secondary"/>
					</footer>
				</form>
			</field>
		</record>
    </data>
</odoo>