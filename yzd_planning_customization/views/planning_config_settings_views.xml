<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_inherit_production_capacity" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.production.capacity</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='default_accounts']" position="after">
                <h2>برنامه‌ریزی تولید</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <field name="production_line_capacity"/>
                            <label for="production_line_capacity"/>
                            <div class="text-muted">
                                ظرفیت کل خط تولید (تن/ماه)
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
