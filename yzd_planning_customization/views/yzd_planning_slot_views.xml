<odoo>
    <record id="view_planning_slot_form_inherit_yzd" model="ir.ui.view">
        <field name="name">planning.slot.form.inherit.yzd</field>
        <field name="model">planning.slot</field>
        <field name="inherit_id" ref="planning.planning_view_form"/>
        <field name="arch" type="xml">
            <!-- resource_id فقط منابع material -->
            <field name="resource_id" position="replace">
                <field name="resource_id" domain="[('resource_type','=','material')]"/>
            </field>
            <!-- مخفی کردن فیلدهای غیرضروری -->
            <field name="role_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="template_creation" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="allocated_hours" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="repeat" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <!-- همه فیلدهای فرم را داخل یک notebook قرار بده -->
            <xpath expr="//sheet" position="replace">
                <sheet>
                    <notebook>
                        <page string="اطلاعات برنامه‌ریزی">
                            <group>
                                <field name="allow_self_unassign" invisible="1"/>
                                <field name="is_assigned_to_me" invisible="1"/>
                                <field name="resource_id" domain="[('resource_type','=','material')]"/>
                                <field name="start_datetime"/>
                                <field name="end_datetime"/>
                                <field name="company_id"/>
                                <!-- سایر فیلدهای مورد نیاز -->
                            </group>
                        </page>
                        <page string="محصول‌های مرتبط" name="related_boms">
                            <field name="bom_line_ids">
                                <tree editable="bottom" create="false" delete="false"> 
                                    <field name="bom_id"/>
                                     <field name="percentage" widget="float" sum="جمع کل"/>
                                     <field name="production_amount" readonly="1" sum="جمع کل"/>
                                </tree>
                            </field>
                            <footer>
                                <button name="action_calculate_requirements"
                                        string="محاسبه موارد مورد نیاز"
                                        type="object"
                                        class="btn-primary"/>
                            </footer>
                        </page>
                        <page string="مواد اولیه مورد نیاز" name="required_components">
                            <field name="component_line_ids">
                                <tree editable="bottom" create="false" delete="false">
                                    <field name="product_id"/>
                                    <field name="required_qty" readonly="1" sum="جمع کل"/>
                                    <field name="factory_stock" readonly="1" sum="جمع کل"/>
                                    <field name="transit_stock" readonly="1" sum="جمع کل"/>
                                    <field name="supplier_stock" readonly="1" sum="جمع کل"/>
                                    <field name="document_qty" sum="جمع کل"/>
                                    <field name="shortage_qty" readonly="1"/>
                                    <field name="purchase_qty" readonly="1"/>
                                    <field name="transfer_qty" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </xpath>
        </field>
    </record>
</odoo>