<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_transport_planning_tree" model="ir.ui.view">
        <field name="name">transport.planning.tree</field>
        <field name="model">transport.planning</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="state"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>

    <record id="view_transport_planning_form" model="ir.ui.view">
        <field name="name">transport.planning.form</field>
        <field name="model">transport.planning</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_send_for_approval" 
                            string="ارسال جهت تایید" 
                            type="object" 
                            class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_return" 
                            string="بازگشت" 
                            type="object" 
                            class="btn btn-secondary"
                            invisible="state != 'under_review'"/>
                    <button name="action_approve" 
                            string="تایید" 
                            type="object" 
                            class="btn btn-primary"
                            invisible="state != 'under_review'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,under_review,approved"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            type="object"
                            name="action_view_purchase_request_lines"
                            class="oe_stat_button"
                            icon="fa-shopping-cart"
                            string="Purchase Requests"
                            invisible ="purchase_request_line_count == 0">
                            <field name="purchase_request_line_count" widget="statinfo" string="تعداد درخواست خرید"/>
                        </button>
                        <button
                            type="object"
                            name="action_view_freight_orders"
                            class="oe_stat_button"
                            icon="fa-truck"
                            string="Freight Orders"
                            invisible ="freight_orders_count == 0">  
                            <field name="freight_orders_count" widget="statinfo" string="تعداد سفارش حمل"/>
                        </button>
                    </div>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="start_date" readonly="state != 'draft'"/>
                        <field name="end_date" readonly="state != 'draft'"/>
                        <field name="return_reason" invisible="1"/>
                    </group>
                    <notebook>
                        <page string="مواد مورد نیاز">
                            <field name="line_ids">
                                <tree editable="bottom" create="0" delete="0">
                                    <field name="state" readonly="1" column_invisible="1"/>
                                    <field name="product_id"/>
                                    <field name="factory_stock" readonly="1" class="custom_column_width"/>
                                    <field name="supplier_stock" readonly="1"/>
                                    <field name="tank_capacity" readonly="state != 'draft'"/>
                                    <field name="empty_capacity" readonly="1"/>
                                    <field name="required_factory_qty" string="نیاز کارخانه" readonly="state != 'draft'"/>
                                    <field name="qty_to_send"/>
                                    <field name="description" widget="html" readonly="1" string="اقدام"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Wizard View -->
    <record id="view_transport_planning_return_wizard" model="ir.ui.view">
        <field name="name">transport.planning.return.wizard.form</field>
        <field name="model">transport.planning.return.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="planning_id" invisible="1"/>
                    <field name="return_reason" required="1"/>
                </group>
                <footer>
                    <button name="action_confirm_return" 
                            string="تایید" 
                            type="object" 
                            class="btn btn-primary"/>
                    <button string="انصراف" 
                            class="btn btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_transport_planning" model="ir.actions.act_window">
        <field name="name">برنامه ریزی حمل</field>
        <field name="res_model">transport.planning</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_transport_planning"
              name="برنامه ریزی حمل"
              parent="planning.planning_menu_schedule_by_resource"
              action="action_transport_planning"
              sequence="30"/>
</odoo>
