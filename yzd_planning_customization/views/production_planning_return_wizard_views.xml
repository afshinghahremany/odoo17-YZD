<odoo>
    <record id="view_production_planning_return_wizard_form" model="ir.ui.view">
        <field name="name">production.planning.return.wizard.form</field>
        <field name="model">production.planning.return.wizard</field>
        <field name="arch" type="xml">
            <form string="علت بازگشت">
                <group>
                    <field name="reason"/>
                </group>
                <footer>
                    <button name="action_confirm" string="تایید" type="object" class="btn-primary"/>
                    <button string="انصراف" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="action_production_planning_return_wizard"
                name="علت بازگشت"
                res_model="production.planning.return.wizard"
                view_mode="form"
                target="new"/>
</odoo>
